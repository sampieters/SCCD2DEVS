<?xml version="1.1" ?>
<diagram author="Sam Pieters" name="Create and Start Multiple Instances Of The Same Class">
    <description>
        Test 9: Create and start multiple instances of the same class
    </description>
    <inport name="ui"/>
    <outport name="ui"/>
    <class name="MainApp" default="true">
        <relationships>
            <association name="linkA" class="A" />
        </relationships>
        <constructor>
            <body>
                self.instances = 10
            </body>
        </constructor>
        <scxml initial="state1">
            <state id="state1">
                <onentry>
                    <raise scope="cd" event="create_instance">
                        <parameter expr='"linkA"' />
                        <parameter expr='"A"' />
                        <!-- Constructor parameters -->
                        <parameter expr='self.instances' type="int" />
                    </raise>
                </onentry>
                <transition event='instance_created' target='../state2'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_created_succesfully">
                        <parameter expr="str('%.2f' % (self.getSimulatedTime() / 1000.0))" />
                        <parameter expr="association_name" />
                    </raise>
                    <raise scope="cd" event="start_instance">
                        <parameter expr="association_name" />
                    </raise>
                    <script>
                        self.instances -= 1
                    </script>
                </transition>
            </state>
            <state id="state2">
                <transition event='instance_started' target='.'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_started_succesfully">
                        <parameter expr="str('%.2f' % (self.getSimulatedTime() / 1000.0))" />
                        <parameter expr="association_name" />
                    </raise>
                </transition>
                <transition target="../state1" cond="self.instances != 0" />
                <transition target="../state3" cond="self.instances == 0" />
            </state>
            <state id="state3" />  
        </scxml>
    </class>

    <class name="A">
        <constructor>
            <parameter name='instance_number' type="int" />
            <body>
                self.number = instance_number
            </body>
        </constructor>
        <scxml initial="state1">
            <state id="state1">
                <onentry>
                    <raise port="ui" event="statechart_started_succesfully">
                        <parameter expr="str('%.2f' % (self.getSimulatedTime() / 1000.0))" />
                        <parameter expr="self.number" />
                    </raise>
                    <raise port="ui" event="constructor_initialized_succesfully">
                        <parameter expr="str('%.2f' % (self.getSimulatedTime() / 1000.0))" />
                        <parameter expr="self.number" />
                    </raise>
                </onentry>
            </state>
        </scxml>
    </class>
</diagram>