<?xml version="1.1" ?>
<diagram author="Sam Pieters" name="Create and Start Instance Of Multiple Classes">
    <description>
        Test 10: Check if an instance of multiple classes are created and started successfully
    </description>
    <inport name="ui"/>
    <outport name="ui"/>
    <class name="MainApp" default="true">
        <relationships>
            <association name="linkA" class="A" />
            <association name="linkB" class="B" />
        </relationships>
        <scxml initial="state1">
            <state id="state1">
                <onentry>
                    <raise scope="cd" event="create_instance">
                        <parameter expr='"linkA"' />
                        <parameter expr='"A"' />
                    </raise>
                </onentry>
                <transition event='instance_created' target='../state2'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_created_succesfully">
                        <parameter expr="association_name" />
                    </raise>
                    <raise scope="cd" event="start_instance">
                        <parameter expr='association_name' />
                    </raise>
                </transition>
            </state>
            <state id="state2">
                <transition event='instance_started' target='../state3'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_started_succesfully">
                        <parameter expr="association_name" />
                    </raise>
                    <raise scope="cd" event="create_instance">
                        <parameter expr='"linkB"' />
                        <parameter expr='"B"' />
                    </raise>
                </transition>
            </state>
            <state id="state3">
                <transition event='instance_created' target='../state4'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_created_succesfully">
                        <parameter expr="association_name" />
                    </raise>
                    <raise scope="cd" event="start_instance">
                        <parameter expr='association_name' />
                    </raise>
                </transition>
            </state>
            <state id="state4">
                <transition event='instance_started' target='../state5'>
                    <parameter name="association_name" type="string"/>
                    <raise port="ui" event="instance_started_succesfully">
                        <parameter expr="association_name" />
                    </raise>
                </transition>
            </state>
            <state id="state5" />
        </scxml>
    </class>

    <class name="A">
        <relationships>
            <association name="linkB" class="B" />
        </relationships>
        <scxml initial="state1">
            <state id="state1">
                <onentry>
                    <raise port="ui" event="statechart_started_succesfully" />
                </onentry>
                <transition event='instance_created' target='../not_possible' />
            </state>
            <state id="not_possible">
                <onentry>
                    <raise port="ui" event="should_not_happen" />
                </onentry>
            </state>
        </scxml>
    </class>

    <class name="B">
        <scxml initial="state1">
            <state id="state1">
                <onentry>
                    <raise port="ui" event="statechart_started_succesfully" />
                </onentry>
                <transition event='instance_created' target='../not_possible' />
            </state>
            <state id="not_possible">
                <onentry>
                    <raise port="ui" event="should_not_happen" />
                </onentry>
            </state>
        </scxml>
    </class>
</diagram>