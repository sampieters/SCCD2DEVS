<?xml version="1.1" ?>
<diagram author="Sam Pieters" name="AfterTransitionTest">
    <description>
        Test 3: Check if a script works by updating parameters.
    </description>
    <class name="MainApp" default="true">
        <constructor>
            <body>
                self.value = 0
            </body>
        </constructor>
        <scxml initial="state1">
            <state id="state1"> 
                <transition after="1" target=".">
                    <script>
                        self.value += 1
                    </script>
                </transition>
                <transition target="../state2" cond="self.value == 2"/>
            </state>
            <state id="state2" />
        </scxml>
    </class>
</diagram>