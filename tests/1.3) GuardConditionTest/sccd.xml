<?xml version="1.1" ?>
<diagram author="Sam Pieters" name="GuardConditionTest">
    <description>
        Test if the guard condition for a transition works.
    </description>
    <top>
        VALUE = 5
    </top>
    <class name="MainApp" default="true">
        <scxml initial="state1">
            <state id="state1">
                <transition target="../state2" cond="VALUE == 3" />
                <transition target="../state3" cond="VALUE == 5" />
            </state>
            <state id="state2" />
            <state id="state3" />
        </scxml>
    </class>
</diagram>